<Page
    x:Class="Lets_Emoji_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lets_Emoji_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Rectangle x:ConnectionId='2' x:Name="RectTitle"
                   Fill="LightSeaGreen"
                   Height="{Binding ElementName=MenuBarMain,Path=ActualHeight}"/>

        <Image x:ConnectionId='3' Source="/Assets/Fun_Title_200_60_White.png"
                   Height="{Binding ElementName=RectTitle,Path=ActualHeight}"
                   Margin="10 0 0 0"
               HorizontalAlignment="Left"
                   x:Name="ImageTitle"/>

        <StackPanel Orientation="Horizontal">
            <muxc:MenuBar x:ConnectionId='5' x:Name="MenuBarMain"
                          Margin="160 0 0 0">

                <muxc:MenuBarItem Title="功能">
                    <MenuFlyoutItem x:ConnectionId='8' Text="刷新Emoji页面"
                                    x:Name="MenuEmoji"
                                                                />
                    <MenuFlyoutItem x:ConnectionId='9' Text="更新搜索词库"
                                    x:Name="MenuEmojiUpdate"
                                                                />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem x:ConnectionId='10' Text="重置本地词库"
                                    x:Name="MenuEmojiReset"
                                                                />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem x:ConnectionId='11' Text="退出"
                                    x:Name="MenuExit"
                                                                />
                </muxc:MenuBarItem>

                <muxc:MenuBarItem Title="帮助">
                    <MenuFlyoutItem x:ConnectionId='7' Text="关于"
                                    x:Name="MenuAbout"
                                                                />
                </muxc:MenuBarItem>

            </muxc:MenuBar>
            <TextBlock x:ConnectionId='6' x:Name="TextBlockTitle"
                       Text=""
                       FontSize="10"
                       Foreground="#FF777777"
                       VerticalAlignment="Center"
                       Margin="20 0 0 0"/>
        </StackPanel>

        <Frame x:ConnectionId='4' x:Name="FrameMain"
               Grid.Row="1">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition  />
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>

    </Grid>
</Page>

